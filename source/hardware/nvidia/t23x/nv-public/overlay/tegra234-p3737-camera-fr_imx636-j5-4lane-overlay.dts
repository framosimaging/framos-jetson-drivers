/dts-v1/;
/plugin/;

#include <dt-bindings/clock/tegra234-clock.h>
#include <dt-bindings/gpio/tegra234-gpio.h>
#include <dt-bindings/tegra234-p3737-0000+p3701-0000.h>

/* TCA6408 Pxx bus-port define*/
#define CRESETB		1

/ {
	overlay-name = "Framos IMX636-J5-4Lane";
	jetson-header-name = "Jetson AGX CSI Connector";
	compatible = JETSON_COMPATIBLE;

	fragment@0 {
		target = <&sensor_module0>;
		__overlay__ {
			status = "okay";
			badge = "imx636_bottomleft_framos";
			drivernode0 {
				status = "okay";
				/* Declare PCL support driver (classically known as guid) */
				devname = "imx636 9-003c";
				/* Declare the device-tree hierarchy to driver instance */
				sysfs-device-tree = "/sys/firmware/devicetree/base/bus@0/i2c@3180000/tca9548@70/i2c@0/imx636_a@3c";
			};
		};
	};

	fragment@1 {
		target = <&sensor_vi_port0>;
		__overlay__ {
			status = "okay";
		};
	};

	fragment@2 {
		target = <&sensor_vi_in0>;
		__overlay__ {
			status = "okay";
			bus-width = <4>;
		};
	};

	fragment@3 {
		target = <&sensor_csi_ch0>;
		__overlay__ {
			status = "okay";
			ports {
				status = "okay";
			};
		};
	};

	fragment@4 {
		target = <&sensor_csi_ch0_port0>;
		__overlay__ {
			status = "okay";
		};
	};

	fragment@5 {
		target = <&sensor_csi_ch0_in>;
		__overlay__ {
			status = "okay";
			bus-width = <4>;
			remote-endpoint = <&sensor_out_a>;
		};
	};

	fragment@6 {
		target = <&sensor_csi_ch0_port1>;
		__overlay__ {
			status = "okay";
		};
	};

	fragment@7 {
		target = <&sensor_csi_ch0_out>;
		__overlay__ {
			status = "okay";
		};
	};

	fragment@8 {
		target = <&tca9548_70_i2c0>;
		__overlay__ {
			lifcl_var2fixed_1_a: lifcl_var2fixed_1_a@22 {
				compatible = "framos,lifcl_var2fixed_1";
				reg = <0x22>;
				device = "lifcl_var2fixed_1";
			};

			sensor_a: imx636_a@3c {
				compatible = "framos,imx636";
				reg = <0x3c>;

				/* Define any required hw resources needed by driver */
				/* ie. clocks, io pins, power sources */
				clocks = <&bpmp TEGRA234_CLK_EXTPERIPH1>, <&bpmp TEGRA234_CLK_EXTPERIPH1>;
				clock-names = "extperiph1", "pllp_grtba";
				mclk = "extperiph1";
				clock-frequency = <20000000>;
				lifcl_var2fixed_1-device = <&lifcl_var2fixed_1_a>;

				devnode = "video0";

				physical_w = "13.00";
				physical_h = "13.00";

				sensor_model ="imx636";

				/* Defines number of frames to be dropped by driver internally after applying */
				/* sensor crop settings. Some sensors send corrupt frames after applying */
				/* crop co-ordinates */
				post_crop_frame_drop = "0";

				/* Convert Gain to unit of dB (decibel) befor passing to kernel driver */
				use_decibel_gain = "true";

				/* if true, delay gain setting by one frame to be in sync with exposure */
				delayed_gain = "false";

				/* enable CID_SENSOR_MODE_ID for sensor modes selection */
				use_sensor_mode_id = "false";

				mode0 {
					mclk_khz = "20000";
					num_lanes = "4";
					tegra_sinterface = "serial_a";
					vc_id = "0";
					phy_mode = "DPHY";
					discontinuous_clk = "no";
					dpcm_enable = "false";
					cil_settletime = "0";
					active_w = "1024";
					active_h = "64";

					dynamic_pixel_bit_depth = "8";
					csi_pixel_bit_depth = "8";
					mode_type = "bayer";
					pixel_phase = "rggb";

					readout_orientation = "0";
					line_length = "8000";
					inherent_gain = "1";
					pix_clk_hz = "750000000";
					serdes_pix_clk_hz = "12000000000"; /* GMSL predefine */

					gain_factor = "10";
					min_gain_val = "0"; /* 0dB */
					max_gain_val = "480"; /* 48dB */
					step_gain_val = "1"; /* 0.1 */
					default_gain = "0";
					min_hdr_ratio = "1";
					max_hdr_ratio = "64";
					framerate_factor = "1000000";
					min_framerate = "1500000"; /* 1.5 */
					max_framerate = "500000000"; /* 500 */
					step_framerate = "1";
					default_framerate= "60000000";
					exposure_factor = "1000000";
					min_exp_time = "28"; /* us */
					max_exp_time = "660000"; /* us */
					step_exp_time = "1";
					default_exp_time = "27879";/* us */
					embedded_metadata_height = "0";
				};
				ports {
					#address-cells = <1>;
					#size-cells = <0>;
					port@0 {
						reg = <0>;
						sensor_out_a: endpoint {
							vc-id = <0>;
							port-index = <0>;
							bus-width = <4>;
							remote-endpoint = <&sensor_csi_ch0_in>;
						};
					};
				};
			};
		};
	};

};
